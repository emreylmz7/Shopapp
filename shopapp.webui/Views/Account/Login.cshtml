<main class="form-signin w-100 m-auto" id="loginPage">
    <h1 class="h3 mb-3 fw-normal">Login</h1>
    <hr>  

    <form asp-controller="Account" asp-action="Login" method="POST">

        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="form-floating">
            <input asp-for="Email" class="form-control" id="floatingInput" placeholder="name@example.com">
            <span asp-validation-for="Email" class="text-danger"></span>
            <label asp-for="Email" for="floatingInput">Email address</label>
        </div>

        <div class="form-floating">
            <input asp-for="Password" class="form-control" id="floatingPassword" placeholder="Password">
            <span asp-validation-for="Password" class="text-danger"></span>
            <label asp-for="Password" for="floatingPassword">Password</label>
        </div>

        <div class="form-floating text-center">
            <a href="/account/forgotpassword" class="btn btn-link">Forgot Password?</a>
        </div>

       
        <button class="btn btn-dark w-100 py-2" type="submit">Login</button>
    </form>
</main>



@section Css
{
    <link rel="stylesheet" href="~/css/loginPage.css">
}


