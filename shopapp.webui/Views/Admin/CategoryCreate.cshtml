@model CategoryModel

<h1 class="h3">Create Category</h1>
<hr>

<div class="row">
    <div class="col-md-8">
        <form asp-controller="Admin" asp-action="CategoryCreate" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group row mt-3">
                <label asp-for="Name" class="col-sm-2 col-form-label">Name</label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="Name">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row mt-3">
                <label asp-for="Url" class="col-sm-2 col-form-label">Url</label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="Url">
                    <span asp-validation-for="Url" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row mt-3">
                <div class="col-sm-10 offset-sm-2">
                    <button class="btn btn-primary" type="submit">Save Category</button>
                </div>
            </div>
        </form>
    </div>
    <div class="col-md-4">

    </div>
</div> 

@section Scripts
{
    <script src="/modules/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="/modules/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>
}