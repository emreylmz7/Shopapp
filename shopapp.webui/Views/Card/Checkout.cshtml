@model OrderModel



<h1>Checkout</h1>
<hr>
<div class="row">
    <div class="col-md-8">
        <h4 class="mb-3">Sipariş Detayı</h4>
        <form method="post" asp-controller="Card" asp-action="Checkout">
            <input type="hidden" name="cardId" value="0">
            <div class="row mb-3">
                <div class="col-md-6">
                    <label asp-for="@Model.FirstName" class="mt-3"></label>
                    <input asp-for="@Model.FirstName" class="form-control">
                    <label asp-for="@Model.LastName" class="mt-3"></label>
                    <input asp-for="@Model.LastName" class="form-control">
                    <label asp-for="@Model.Email" class="mt-3"></label>
                    <input asp-for="@Model.Email" class="form-control">
                </div>
                <div class="col-md-6">
                    <label asp-for="@Model.City" class="mt-3"></label>
                    <input asp-for="@Model.City" class="form-control">
                    <label asp-for="@Model.Phone" class="mt-3"></label>
                    <input asp-for="@Model.Phone" class="form-control">
                </div>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Address"></label>
                <textarea asp-for="@Model.Address" class="form-control"></textarea>
            </div>
            <hr>
            <h4>Ödeme Bilgileri</h4>
            <div class="row mb-3">
                <div class="col-md-6">
                    <label asp-for="@Model.CardName" class="mt-3"></label>
                    <input asp-for="@Model.CardName" class="form-control">

                    <label asp-for="@Model.CardNumber" class="mt-3"></label>
                    <input asp-for="@Model.CardNumber" class="form-control">

                    <label asp-for="@Model.Cvc" class="mt-3"></label>
                    <input asp-for="@Model.Cvc" class="form-control">
                </div>
                <div class="col-md-6">
                    <label asp-for="@Model.ExpirationYear" class="mt-3"></label>
                    <input asp-for="@Model.ExpirationYear" class="form-control">

                    <label asp-for="@Model.ExpirationMonth" class="mt-3"></label>
                    <input asp-for="@Model.ExpirationMonth" class="form-control">
                </div>
            </div>

            <hr class="mb-3">
            <button type="submit" class="btn btn-primary btn-lg btn-block">Submit</button>
        </form>
    </div>
    <div class="col-md-4">
        <h4 class="mb-3">
            <span>Özet Bilgiler</span>
        </h4>    
        <ul class="list-group mb-3">

            @foreach (var item in Model.CardModel.CardItems)
            {
                <li class="list-group-item d-flex justify-content-between">
                    <div>
                        <h6>@item.Name</h6>
                    </div>
                    <span class="text-muted">@item.Price.ToString("c")</span>
                </li>
            }
                      
            <li class="list-group-item d-flex justify-content-between">
                <span>Toplam (TL)</span>
                <strong class="text-muted">@Model.CardModel.TotalPrice().ToString("c") </strong>
            </li>
        </ul>
        
    </div>
</div>